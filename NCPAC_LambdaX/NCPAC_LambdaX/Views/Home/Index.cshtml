@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html>
<head>
    <title>NCPAC</title>
    <style>
        /* Add styles for white and blue color theme */
        body {
            background-color: white;
            background-image: url('./images/background-home.jpg');
            background-size: cover;
            background-repeat: no-repeat;
        }

        h1, h2, h3, h4, h5, h6 {
            color: #0077be;
        }

        a {
            color: #0077be;
            text-decoration: none;
        }
        /* Add CSS for complex components */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
        }

        .card {
            width: 83%;
            height:83%;
            background-color: white;
            border: 1px solid ##006ba1;
            padding: 10px;
            margin: 15px;
        }

        h1 {
            margin-top: 3%;
            margin-bottom: 1%;
        }

        h2 {
            font-size: x-large;
        }

        .card img {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
  <h1>Welcome to NCPAC Manager</h1>
  <br />
  <p>This application is the centralized management system of all the information of the Niagara College Policy Management Commitee. Please check out the following information tiles for furthur information. Please be reminded to keep all your information upto date and keep an eye on Announcements and Action Items assigned to you.</p>
  
  <div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        @if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.IsInRole("Supervisor"))
        {
            <div class="col-sm-12 col-md-6 col-lg-4 ">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">View Members</h2>
                        <p class="card-text">View member data edit archive and manage members.</p>
                        <a href="./Members">View Members</a>
                    </div>
                </div>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-4">
              <div class="card">
                <div class="card-body">
                  <h2 class="card-title">Meetings</h2>
                  <p class="card-text">Click here to check the meetings archive/ Archive meeting minitues.</p>
                  <a href="./Meetings" target="_blank">View Meetings</a>
                </div>
              </div>
            </div>
        }
        else
        {
            <div class="col-sm-12 col-md-6 col-lg-4 ">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">My Account</h2>
                        <p class="card-text">Please keep your personal info updated. <b>Start here if it's your first LogIn</b></p>
                        <a href="./MemberAccount/Details">Members Account</a>
                    </div>
                </div>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-4">
              <div class="card">
                <div class="card-body">
                  <h2 class="card-title">Contact</h2>
                  <p class="card-text">Contact the admin if you have any furthur issues.</p>
                  <a href="mailto:ncpacinfo@niagaracollege.ca">Email Admin</a>
                </div>
              </div>
            </div>
        }
    }
    else
    {
            <div class="col-sm-12 col-md-6 col-lg-4 ">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Log In</h2>
                        <p class="card-text">Please Login to view furthur options and information...</p>
                        <a href="./Identity/Account/Login">LogIn</a>
                    </div>
                </div>
            </div>
    }

    
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Announcements</h2>
          <p class="card-text">View the latest PAC announcements</p>
          <a href="./Announcements" target="_blank">View Announcements</a>
        </div>
      </div>
    </div>
    
    
    
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Action Items</h2>
          <p class="card-text">View all the action items assigned. (Login Required)</p>
          <a href="./ActionItems" target="_blank">Action Items</a>
        </div>
      </div>
    </div>

    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Usage Guide</h2>
                <p class="card-text">Download the user manuel for help with using the application.</p>
                <a href="./files/user-manuel.pdf" download="user-manuel">Download Manuel</a>
            </div>
        </div>
    </div>

    
  </div>
</div>
</body>
</html>

@section Scripts {
    <script>
        //Register the service worker.
        //Note it is still not "installable" without the manifest
        if (navigator.serviceWorker.controller) {
            console.log('Active service worker found, no need to register');
        } else {
            navigator.serviceWorker.register('sw.js', {
                scope: './'
            }).then(function (reg) {
                console.log('Service worker has been registered for scope:' + reg.scope);
            });
        }
    </script>
}

