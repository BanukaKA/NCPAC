@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html>
<head>
    <title>NCPAC</title>
    <style>
        /* Add styles for white and blue color theme */
        body {
            background-color: white;
            background-image: url('./images/background-home.jpg');
            background-size: cover;
            background-repeat: no-repeat;
        }

        h1, h2, h3, h4, h5, h6 {
            color: #0077be;
        }

        a {
            color: #0077be;
            text-decoration: none;
        }
        /* Add CSS for complex components */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
        }

        .card {
            width: 83%;
            height:83%;
            background-color: white;
            border: 1px solid ##006ba1;
            padding: 10px;
            margin: 15px;
        }

        h1 {
            margin-top: 3%;
            margin-bottom: 1%;
        }

        h2 {
            font-size: x-large;
        }

        .card img {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
  <h1>Welcome to NCPAC Manager</h1>
  <br />
  <p>It is critical to Niagara College to have input from all stakeholders, internal and external, to ensure quality and ongoing improvement in our programs. <br /> Both practices and processes ensure standardized and regular quantitative and qualitative data from stakeholder is gathered to inform plans and actions with <br /> regards to continuous improvement.</p>
  
  <div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        @if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.IsInRole("Supervisor"))
        {
            <div class="col-sm-12 col-md-6 col-lg-4 ">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">View Members</h2>
                        <p class="card-text">View member data edit archive and manage members.</p>
                        <a href="./Members">Members</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-sm-12 col-md-6 col-lg-4 ">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">My Account</h2>
                                <p class="card-text">Please click here to update and view your personal account details.</p>
                        <a href="./MemberAccount/Details">Members Account</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
            <div class="col-sm-12 col-md-6 col-lg-4 ">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Log In</h2>
                        <p class="card-text">Please Login to view furthur options and information...</p>
                        <a href="./Identity/Account/Login">LogIn</a>
                    </div>
                </div>
            </div>
    }

    
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Announcements</h2>
          <p class="card-text">Click here to view the latest announcements</p>
          <a href="./Announcements" target="_blank">Click Here</a>
        </div>
      </div>
    </div>
    
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Meetings</h2>
          <p class="card-text">Check if you have any meetings (Login Required)</p>
          <a href="./Meetings" target="_blank">Learn More</a>
        </div>
      </div>
    </div>
    
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Action Items</h2>
          <p class="card-text">Review existing polls of the NCPAC. (Login Required)</p>
          <a href="./ActionItems" target="_blank">Learn More</a>
        </div>
      </div>
    </div>
    
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Contact Admin</h2>
          <p class="card-text">Users, If you are having any trouble with the application contact the admin.</p>
          <a href="mailto:ncpacinfo@niagaracollege.ca">Email</a>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
</html>

@section Scripts {
    <script>
        //Register the service worker.
        //Note it is still not "installable" without the manifest
        if (navigator.serviceWorker.controller) {
            console.log('Active service worker found, no need to register');
        } else {
            navigator.serviceWorker.register('sw.js', {
                scope: './'
            }).then(function (reg) {
                console.log('Service worker has been registered for scope:' + reg.scope);
            });
        }
    </script>
}

