@model NCPAC_LambdaX.ViewModels.EmployeeVM

@{
    ViewData["Title"] = "Edit Account";
}


<h4>Edit Account for @User.Identity.Name</h4>
<div class="text-danger">@TempData["message"]</div>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <input type="hidden" asp-for="ID" />
            <input type="hidden" name="Email" value="@User.Identity.Name" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label" style="margin-top:3%"><b>Please go through this link to update your account login email if required</b> &nbsp;</label>
                <a href="../../Identity/Account/Manage/Email" style="text-decoration:none;">Email Update</a>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <br />
    <a asp-action="Details" class="btn btn-secondary">Cancal</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

