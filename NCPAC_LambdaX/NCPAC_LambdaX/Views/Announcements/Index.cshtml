@model IEnumerable<NCPAC_LambdaX.Models.Announcement>

@{
    ViewData["Title"] = "Index";
}

<h1>Announcements</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.IsInRole("Supervisor"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary" tooltip="Add new announcement" flow="right">Create New</a>
    </p>
}


@foreach (var item in Model) {
        <br />
            <h2>
                @Html.DisplayFor(modelItem => item.Subject)
            </h2>
            <p>
                <label>Posted At: </label> @Html.DisplayFor(modelItem => item.TimePosted)
            </p>
            <div>
                @Html.DisplayFor(modelItem => item.AnnouncementDescription)
            </div>
            <br />
            @if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.IsInRole("Supervisor"))
            {
                <td>
            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID" tooltip="Delete Announcement" flow="right">Delete</a>
                </td>
            }            
        <hr>
}
